<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/spartan_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">15sp</item>
        <item name="elevation">30dp</item>
    </style>

    <style name="btnNumber" parent="button">
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">@color/key_200</item>
    </style>

    <style name="btnText" parent="button">
        <item name="android:backgroundTint">@color/key_600</item>
    </style>
</resources>