<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:divider">@drawable/vertical_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="fontFamily">@font/spartan_bold</item>
    </style>

    <style name="btnNumber" parent="button">
        <item name="backgroundTint">#EAE3DC</item>
        <item name="android:textColor">#434A59</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="btnText" parent="button">
        <item name="android:backgroundTint">#647198</item>
        <item name="android:background">@drawable/button_text</item>
    </style>
</resources>